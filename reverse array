#include <stdio.h>
#define MAX_SIZE 100      

int main()
{
    int arr[MAX_SIZE];
    int size, i;

    /* Input size of array */
    printf("Enter size of the array: ");
    scanf("%d", &size);

    /* Input array elements */
    printf("Enter elements in array: ");
    for(i=0; i<size; i++)
    {
        scanf("%d", &arr[i]);
    }

    /*
     * Print array in reversed order
     */
    printf("\nArray in reverse order: ");
    for(i = size-1; i>=0; i--)
    {
        printf("%d\t", arr[i]);
    }

    return 0;
}     


      TEST CASE
      Enter size of the array: 7
Enter elements in array: 16
18
27
16
23
21
19

Array in reverse order: 19      21      23      16      27      18      16
